<odoo>
    <record id="view_staff_list" model="ir.ui.view">
        <field name="name">business.staff.list</field>
        <field name="model">business.staff</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="user_id"/>
                <field name="job_title"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_staff_form" model="ir.ui.view">
        <field name="name">business.staff.form</field>
        <field name="model">business.staff</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="job_title"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">business.staff</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
