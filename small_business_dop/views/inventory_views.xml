<odoo>
    <record id="view_inventory_list" model="ir.ui.view">
        <field name="name">business.inventory.list</field>
        <field name="model">business.inventory</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="quantity"/>
                <field name="location"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="view_inventory_form" model="ir.ui.view">
        <field name="name">business.inventory.form</field>
        <field name="model">business.inventory</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="quantity"/>
                        <field name="location"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_inventory" model="ir.actions.act_window">
        <field name="name">Inventory</field>
        <field name="res_model">business.inventory</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
