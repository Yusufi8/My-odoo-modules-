<odoo>
    <record id="view_expense_list" model="ir.ui.view">
        <field name="name">business.expense.list</field>
        <field name="model">business.expense</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="view_expense_form" model="ir.ui.view">
        <field name="name">business.expense.form</field>
        <field name="model">business.expense</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="amount"/>
                        <field name="state" readonly="1"/>
                        <field name="date"/>
                    </group>
                    <footer>
                        <button string="Submit" type="object" name="action_submit" attrs="{'invisible':[('state','!=','draft')]}"/>
                        <button string="Approve" type="object" name="action_approve" attrs="{'invisible':[('state','!=','submitted')]}"/>
                        <button string="Reject" type="object" name="action_reject" attrs="{'invisible':[('state','!=','submitted')]}"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_expense" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="res_model">business.expense</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
