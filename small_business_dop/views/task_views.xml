<odoo>
    <record id="view_task_list" model="ir.ui.view">
        <field name="name">daily.task.list</field>
        <field name="model">daily.task</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="assigned_to"/>
                <field name="state"/>
                <field name="date_deadline"/>
            </list>
        </field>
    </record>

    <record id="view_task_form" model="ir.ui.view">
        <field name="name">daily.task.form</field>
        <field name="model">daily.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="assigned_to"/>
                        <field name="state"/>
                        <field name="date_deadline"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">daily.task.kanban</field>
        <field name="model">daily.task</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div><field name="state"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">daily.task</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>
