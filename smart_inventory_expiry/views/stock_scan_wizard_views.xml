<odoo>
    <record id="view_stock_scan_wizard_form" model="ir.ui.view">
        <field name="name">stock.scan.wizard.form</field>
        <field name="model">stock.scan.wizard</field>
        <field name="arch" type="xml">
            <form string="Scan Product">
                <group>
                    <field name="barcode" widget="barcode"/>
                    <field name="quantity"/>
                </group>
                <footer>
                    <button string="Update Stock" type="object" name="update_stock" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_scan_wizard" model="ir.actions.act_window">
        <field name="name">Scan Product</field>
        <field name="res_model">stock.scan.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_scan_wizard" name="Scan Product" parent="menu_smart_inventory_root"
              action="action_stock_scan_wizard"/>
</odoo>