<odoo>
    <record id="action_product_expiry_report" model="ir.actions.report">
        <field name="name">Low Stock & Near Expiry Report</field>
        <field name="model">product.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">smart_inventory_expiry.product_expiry_report_template</field>
        <field name="report_file">smart_inventory_expiry.product_expiry_report_template</field>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_type">report</field>
    </record>

    <template id="product_expiry_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h2>Smart Inventory Report</h2>
                    <p><strong>Product:</strong> <t t-esc="doc.name"/></p>
                    <p><strong>Batch Number:</strong> <t t-esc="doc.batch_number"/></p>
                    <p><strong>Qty Available:</strong> <t t-esc="doc.qty_available"/></p>
                    <p><strong>Expiry Date:</strong> <t t-esc="doc.expiry_date"/></p>
                    <p><strong>Days to Expiry:</strong> <t t-esc="doc.days_to_expiry"/></p>
                    <t t-if="doc.is_near_expiry">
                        <p style="color:red;"><strong>⚠ Near Expiry!</strong></p>
                    </t>
                    <t t-if="doc.is_low_stock">
                        <p style="color:red;"><strong>⚠ Low Stock!</strong></p>
                    </t>
                    <hr/>
                </div>
            </t>
        </t>
    </template>
</odoo>