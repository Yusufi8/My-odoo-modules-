<odoo>
    <record id="view_product_form_expiry" model="ir.ui.view">
        <field name="name">product.product.form.expiry</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <group>
                    <field name="batch_number"/>
                    <field name="expiry_date"/>
                    <field name="days_to_expiry" readonly="1"/>
                    <field name="low_stock_threshold"/>
                    <field name="is_near_expiry" readonly="1"/>
                    <field name="is_low_stock" readonly="1"/>
                    <field name="barcode" widget="barcode" options="{'show_image': True}"/>
                </group>
            </sheet>
        </field>
    </record>

    <record id="view_product_tree_expiry" model="ir.ui.view">
        <field name="name">product.product.tree.expiry</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_template_only_tree_view"/>
        <field name="arch" type="xml">
            <tree>
                <field name="batch_number"/>
                <field name="expiry_date"/>
                <field name="days_to_expiry"/>
                <field name="is_near_expiry"/>
                <field name="is_low_stock"/>
                <field name="barcode"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_smart_inventory_root" name="Smart Inventory"/>
    <menuitem id="menu_smart_inventory_products" name="Products" parent="menu_smart_inventory_root" action="action_product_product"/>
</odoo>