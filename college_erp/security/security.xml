<odoo>
    <record id="group_college_student" model="res.groups">
        <field name="name">College Student</field>
    </record>

    <record id="group_college_teacher" model="res.groups">
        <field name="name">College Teacher</field>
    </record>

    <record id="group_college_admin" model="res.groups">
        <field name="name">College Admin</field>
    </record>

    <!-- Record Rules -->

    <record id="rule_student_see_own" model="ir.rule">
        <field name="name">Student - see own student record</field>
        <field name="model_id" ref="model_college_student"/>
        <field name="groups" eval="[(4, ref('college_erp.group_college_student'))]"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
    </record>

    <record id="rule_teacher_department_students" model="ir.rule">
        <field name="name">Teacher - see students in same department</field>
        <field name="model_id" ref="model_college_student"/>
        <field name="groups" eval="[(4, ref('college_erp.group_college_teacher'))]"/>
        <field name="domain_force">[('department_id','=',user.department_id.id)]</field>
    </record>
</odoo>
