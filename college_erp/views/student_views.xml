<odoo>
    <record id="action_college_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">college.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_college_student_tree" model="ir.ui.view">
        <field name="name">college.student.tree</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="roll_number"/>
                <field name="course_id"/>
                <field name="department_id"/>
                <field name="total_fee"/>
            </tree>
        </field>
    </record>

    <record id="view_college_student_form" model="ir.ui.view">
        <field name="name">college.student.form</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="roll_number" readonly="1"/>
                        <field name="user_id"/>
                        <field name="course_id"/>
                        <field name="department_id"/>
                        <field name="total_fee" readonly="1"/>
                        <field name="attendance_percentage" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_activate" string="Activate" type="object" states="draft" class="btn-primary"/>
                    <button name="action_graduate" string="Graduate" type="object" states="active"/>
                    <button name="action_alumni" string="Alumni" type="object" states="graduated"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
