<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hospital_appointment_list" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments">
                <field name="reference"/>
                <field name="patient_id"/>
                <field name="appointment_date"/>
                <field name="note"/>
            </list>
        </field>
    </record>
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointments">
                <header>
                    <field name="state" widget="statusbar" />
                    <button name="action_confirm" type="object" string="Confirm" modifiers="{'visible': [['state', '=', 'draft']]}" class="btn-primary"/>
                    <button name="action_done" type="object" string="Done" modifiers="{'visible': [['state', '=', 'confirmed']]}" class="btn-success"/>
                    <button name="action_ongoing" type="object" string="Set to Ongoing" modifiers="{'visible': [['state', '=', 'confirmed']]}" class="btn-info"/>
                    <button name="action_cancel" type="object" string="Cancel" modifiers="{'visible': [['state', 'in', ['draft', 'confirmed']]]}" class="btn-danger"/>
                    <button name="action_set_draft" type="object" string="Set to Draft" modifiers="{'visible': [['state', 'in', ['cancelled', 'done']]]}" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="reference" readonly="1"/>
                        </group>
                        <group>
                            <field name="patient_id"/>
                            <field name="appointment_date"/>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </group>
                </sheet>
                <chatter>
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocentent_smiling_face">
                Create a new appointment
            </p>
        </field>
    </record>
</odoo>